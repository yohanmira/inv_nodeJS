<%- include("template/cabecera", {tituloweb: 'página de inicio' }) %>

<div class="container">

    <h1>CRUD Mongo</h1>

    <a class="btn btn-success btn-block my-4" href="/equipos/crear">
        Crear nuevo equipo
    </a>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
            <% if (arrayEquipos.length > 0) { %>
                <% arrayEquipos.forEach(equipo => { %>
                    <tr>
                        <th scope="row"><%= equipo.id %></th>
                        <td><%= equipo.nombre %></td>
                        <td><%= equipo.descripcion %></td>
                        <td>@mdo</td>
                    </tr>
                <% }) %>
            <% } %>

          
        </tbody>
      </table>
    
</div>
    
    <%- include("template/footer") %>